<!DOCTYPE html>
<html lang="en">
  <%= render partial: 'shared/head' %>
  <body data-flash-messages="<%= JSON.dump(flash.to_a) %>">
    <%= turbo_frame_tag "modal" %>
    <div data-controller="app--sidebar" data-app--sidebar-target="appLayer" id="page-container"
      class="mx-auto flex min-h-dvh w-full min-w-[320px] flex-col bg-gray-100 dark:bg-gray-900 dark:text-gray-100 lg:pl-64">
      <%= render partial: 'shared/sidebar' %>
      <%= render partial: 'shared/header' %>
      <main id="page-content" class="flex w-full flex-auto flex-col pt-16 lg:flex-row-reverse">
        <%= render partial: 'shared/sidecontent' %>
        <div class="mx-auto flex w-full max-w-10xl flex-grow flex-col p-4 lg:p-8">
          <%= yield :page_header %>
          <% if content_for?(:body)%>
            <%= yield :body %>
          <% else %>
            <div class="p-2 overflow-x-aut flex justify-center rounded-xl border-gray-200 bg-gray-50 text-gray-400 dark:border-gray-700 dark:bg-gray-800">
              <%= yield %>
            </div>
          <% end %>
        </div>
      </main>
    </div>
  </body>
</html>
