<% if resource.errors.any? %>
<!-- Alerts: Danger -->
<div
  class="rounded bg-red-100 p-4 text-red-700 dark:bg-red-900/75 dark:text-red-100 md:p-5"
  id="error_explanation" data-turbo-cache="false"
>
  <div class="mb-3 flex items-center">
    <svg
      class="hi-solid hi-x-circle mr-3 inline-block size-5 flex-none text-red-500 dark:text-red-400"
      fill="currentColor"
      viewBox="0 0 20 20"
      xmlns="http://www.w3.org/2000/svg"
    >
      <path
        fill-rule="evenodd"
        d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z"
        clip-rule="evenodd"
      />
    </svg>
      <h3 class="font-semibold">
        <%= I18n.t("errors.messages.not_saved",
                 count: resource.errors.count,
                 resource: resource.class.model_name.human.downcase)
       %>
      </h3>
  </div>
  <ul class="ml-8 list-inside space-y-2">
    <% resource.errors.full_messages.each do |message| %>
      <li class="flex items-center">
        <svg
          class="hi-solid hi-arrow-narrow-right mr-2 inline-block size-4 flex-none"
          fill="currentColor"
          viewBox="0 0 20 20"
          xmlns="http://www.w3.org/2000/svg"
        >
          <path
            fill-rule="evenodd"
            d="M12.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-2.293-2.293a1 1 0 010-1.414z"
            clip-rule="evenodd"
          />
        </svg>
        <%= message %>
      </li>
    <% end %>
  </ul>
</div>
<!-- END Alerts: Danger -->

<% end %>
