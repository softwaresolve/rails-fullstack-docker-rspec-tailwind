<!-- Breadcrumbs: Simple with Icons -->
<nav class="dark:text-gray-100">
  <ol class="flex items-center">
    <% if steps.is_a? Hash %>
      <% steps.each do |step| %>
        <li>
          <a href="javascript:void(0)" class="text-teal-600 hover:text-teal-400 dark:text-teal-400 dark:hover:text-teal-300">
            <%= step %>
          </a>
        </li>

        <%= render partial: 'shared/icons/hi-chevron-right' unless step.equal?(steps.last) %>
      <% end %>
    <%else %>
      <% steps.each do |step| %>
        <li>
          <%= link_to step[:title], step[:link],  class: "text-teal-600 hover:text-teal-400 dark:text-teal-400 dark:hover:text-teal-300" %>
        </li>
        <%= render partial: 'shared/icons/hi-chevron-right' unless step.equal?(steps.last) %>
      <% end %>
    <% end %>
  </ol>
</nav>
<!-- END Breadcrumbs: Simple with Icons -->
